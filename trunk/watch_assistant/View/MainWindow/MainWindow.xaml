<Window x:Class="watch_assistant.View.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        
        xmlns:vm="clr-namespace:watch_assistant.ViewModel"
        xmlns:vw="clr-namespace:watch_assistant.View"
        xmlns:vwmw="clr-namespace:watch_assistant.View.MainWindow"
         
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Style="{DynamicResource SkinWindowStyle}"
        
        Height="350" Width="525">

    <Window.Resources>
        <Thickness x:Key="DefaultLeftRightMargin">5,0,5,0</Thickness>
        
        <!-- List view style -->
        <Style x:Key="ListViewItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="Basement"
                                Background="Transparent"
                                CornerRadius="{StaticResource DefaultCornerRadius}">
                            <StackPanel Orientation="Horizontal" 
                                        FlowDirection="LeftToRight"
                                        HorizontalAlignment="Stretch"
                                        Margin="1,1,1,1"
                                        MaxHeight="40">
                                <Border Background="{DynamicResource UserAvatarBackgroundColor}"
                                        CornerRadius="{StaticResource DefaultCornerRadius}">
                                    <Image Source="\Resources\App.ico" Margin="1,1,1,1"/>
                                </Border>
                                <StackPanel Orientation="Vertical">
                                    <Label x:Name="MovieName" HorizontalAlignment="Left" Margin="3,2,0,0">Movie name sample</Label>
                                    <TextBlock x:Name="MovieDescription" Margin="3,0,0,0">Movie description sample</TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Basement" Property="Background" Value="{StaticResource ListItemSelectedBorderBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- End of list view style -->
    </Window.Resources>

    <i:Interaction.Behaviors>
        <vm:WindowMoveBehavior/>
    </i:Interaction.Behaviors>

    <Grid x:Name="MainWindowResizableGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="4"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <vw:WindowPage>
            <vw:WindowPage.MidHeaderCell>
                <Label HorizontalAlignment="Center">SEARCH</Label>
            </vw:WindowPage.MidHeaderCell>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="{StaticResource DefaultLeftRightMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Foreground="LightGray"
                            Grid.Column="0">
                        Type search query here
                    </TextBox>
                    <Button Grid.Column="1" Margin="2,0,0,0">Search</Button>
                </Grid>

                <ListBox x:Name="searchView" 
                         Grid.Row="1" 
                         Margin="5,3,5,3.5"
                         ItemContainerStyle="{StaticResource ListViewItemStyle}">
                    <ListBoxItem></ListBoxItem>
                    <ListBoxItem></ListBoxItem>
                </ListBox>
            </Grid>
        </vw:WindowPage>

        <GridSplitter VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1"/>
    
        <vw:WindowPage Margin="0,0,0,3.5" Grid.Column="2">
            <vw:WindowPage.LeftHeaderCell>
                <Label Margin="5.5,0,0,0">Menu</Label>
            </vw:WindowPage.LeftHeaderCell>
            <vw:WindowPage.MidHeaderCell>
                <Label HorizontalAlignment="Center">Watch Assistant</Label>
            </vw:WindowPage.MidHeaderCell>
            <vw:WindowPage.RightHeaderCell>
                <StackPanel Orientation="Horizontal" 
                            FlowDirection="RightToLeft"
                            Margin="{StaticResource DefaultLeftRightMargin}">
                    <Button Style="{DynamicResource CloseTitleBarButton}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="Close"
                            />
                </StackPanel>
            </vw:WindowPage.RightHeaderCell>

        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Tab Buttons -->
            <Grid x:Name="TabButtonsGrid"
                  Grid.Row="0"
                  Margin="{StaticResource DefaultLeftRightMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        HorizontalContentAlignment="Center">Favorites</Button>
                <Button Grid.Column="1"
                        HorizontalContentAlignment="Center">Interest</Button>
            </Grid>
            
            <!-- Main List -->
            <ListBox x:Name="listView" 
                     Grid.Row="1" 
                     Margin="5,3,5,3.5"
                     ItemContainerStyle="{StaticResource ListViewItemStyle}">
                    <ListBoxItem MouseDoubleClick="ListBoxItem_MouseDoubleClick"></ListBoxItem>
                <ListBoxItem></ListBoxItem>
            </ListBox>

            <!-- Userbar -->
            <StackPanel x:Name="userBar"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft">
                <vwmw:UserNamePlate Margin="{StaticResource DefaultLeftRightMargin}" />
            </StackPanel>       
        </Grid>
            
    </vw:WindowPage>
    </Grid>
</Window>