<Window x:Class="watch_assistant.View.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:watch_assistant.View"
         
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Style="{DynamicResource SkinWindowStyle}"
        
        Height="350" Width="525">
        <local:WindowPage>
            <local:WindowPage.LeftHeaderCell>
                <Label>Left</Label>
            </local:WindowPage.LeftHeaderCell>
            <local:WindowPage.MidHeaderCell>
                <Label HorizontalAlignment="Center">Mid</Label>
            </local:WindowPage.MidHeaderCell>
            <local:WindowPage.RightHeaderCell>
            <Label>
                <Button Style="{StaticResource CloseTitleBarButton}" Width="13" Height="13"/>
            </Label>
            </local:WindowPage.RightHeaderCell>

            <Label FontSize="56">I DID IT!</Label>

        </local:WindowPage>
</Window>