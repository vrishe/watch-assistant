<custom:CustomWindow x:Class="watch_assistant.View.DetailsWindow.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        
        xmlns:custom="clr-namespace:CustomControls;assembly=CustomControls"
        
        Height="400" Width="450">

    <Window.Resources>
        <Thickness x:Key="DefaultLeftRightMargin">5,0,5,0</Thickness>
    </Window.Resources>

    <custom:WindowPage>
        <custom:WindowPage.MidHeaderCell>
            <Label HorizontalAlignment="Center">Item name</Label>
        </custom:WindowPage.MidHeaderCell>
        <custom:WindowPage.RightHeaderCell>
            <StackPanel Orientation="Horizontal" 
                            FlowDirection="RightToLeft"
                            Margin="{StaticResource DefaultLeftRightMargin}">
                <Button Style="{DynamicResource CloseTitleBarButton}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="Close"
                            />
            </StackPanel>
        </custom:WindowPage.RightHeaderCell>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0"
                  Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border CornerRadius="{StaticResource DefaultCornerRadius}"
                        Grid.Row="0">
                    <Image Source="\Resources\App.ico" Margin="1,1,1,1"/>
                </Border>
                <ComboBox Margin="0,5,0,0" Grid.Row="1"/>
                <ComboBox Margin="0,1,0,0" Grid.Row="2"/>
                <ComboBox Margin="0,1,0,0" Grid.Row="3"/>
                <Button Margin="0,5,0,0" Grid.Row="5">Play</Button>
            </Grid>

            <Border Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="1"
                    Grid.Column="1"
                    Margin="0,5,5,5">
                <StackPanel>
                    <Label x:Name="MovieName" HorizontalAlignment="Left" Margin="3,0,0,0">Movie name sample</Label>
                    <TextBlock x:Name="MovieDescription" Margin="3,0,0,0">Movie description sample</TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </custom:WindowPage>
</custom:CustomWindow>
